{
	"compilerOptions": {
		"allowJs": false,
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"declarationDir": "dist",
		"esModuleInterop": true,
		"lib": ["es2019", "dom"],
		"module": "esnext",
		"moduleResolution": "node",
		"outDir": "./dist",
		"resolveJsonModule": true,
		"sourceMap": true,
		"strict": true,
		"target": "es5",
		"types": ["node", "jasmine"]
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "test"]
}
